## Methode pour trouver le flag ##
/*
*   Format:
*   - Objectif
*   commande
*       -> resultat
*/

# include <stdio.h>
# include <string.h>

int main(int ac, char **av)
{
        char *codeCrypt = av[1];
        int i = 0;
        int c;

        while(codeCrypt[i])
        {
                c = codeCrypt[i];
                c -= i;
                printf("%c", c);
                i++;
        }
}